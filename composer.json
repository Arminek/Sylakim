{
    "name": "sylake/sylakim",
    "type": "symfony-bundle",
    "description": "Connector between Akeneo PIM and Sylius",
    "keywords": ["pim", "akeneo", "ecommerce", "e-commerce", "sylius", "connector"],
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Janvier",
            "email": "jjanvier@gmail.com"
        },
        {
            "name": "Arnaud Langlade",
            "email": "arn0d.dev@gmail.com"
        },
        {
            "name": "Romain Monceau",
            "email": "monceau.romain@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/akeneo/pim-community-dev.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/akeneo/platform.git"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "akeneo/pim-community-dev": "*",
        "guzzlehttp/guzzle":        "4.*"
    },
    "require-dev": {
        "phpspec/phpspec": "2.1.0-RC1"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "autoload": {
        "psr-0": { "Sylius\\Bundle\\SylakimBundle\\": "" }
    },
    "target-dir": "Sylius/Bundle/SylakimBundle"
}
